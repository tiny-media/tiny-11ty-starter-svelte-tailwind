<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="generator" content="{{ eleventy.generator }}">
    <title>
      {% if title %}
        {{ title | escape }} -
      {% endif %}
      {{ metadata.title | escape }}
    </title>

    <meta name="description" content="{% if description %}{{ description | strip_html | strip_newlines | truncate: 160 }}{% else %}{{ site.description }}{% endif %}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Favorite Icons -->


    <!-- Stylesheets -->
    {%- if styles -%}
      {% for style in styles %}
        <link
          rel="stylesheet"
          href={{ style | prepend: "/css/" }}
          media="all">
      {% endfor %}
    {%- endif -%}

    <!-- JavaScript -->
    {%- if scripts -%}
      {% for script in scripts %}
        <script
          src={{ script | prepend: "/js/" }}
          type="module"
          defer></script>
      {% endfor %}
    {%- endif -%}
  </head>

  <body class="min-h-screen flex flex-col">

    <section id="Header-Section" class="bg-gray-800 text-white p-4">
      {% render "header" %}
    </section>

    <section id="main-section" class="flex-grow p-4">
      <main>
        {{ content }}
      </main>
    </section>

    <section id="Footer-Section" class="bg-gray-800 text-white p-4">
      {% render "footer" %}
    </section>
  </body>
</html>